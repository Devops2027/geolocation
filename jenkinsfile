pipeline {
    agent any
    triggers {
  pollSCM('* * * * *')
    }
    stages {
        stage('build') {
            steps {
                echo 'build '
            }
        }
          stage('maven package') {
            steps {
                echo 'mvn clean'
                echo 'mvn install'
                echo 'mvn package'
            }
        }
          stage('test') {
            steps {
                echo 'test'
            }
        }
          stage('deploy') {
            steps {
                echo 'deploy'
            }
        }
    }
}